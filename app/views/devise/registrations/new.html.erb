<div class="bg-gradient-primary">
  <%= render partial: 'shared/messages' %>
  <div class="container">

    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
              <div class="col-lg-7">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                  </div>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email Address', class: 'form-control form-control-user' %>
                      <small class="text-primary"><%= resource.errors[:email].to_sentence %></small>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 mb-3 mb-sm-0">
                        <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'Password', class: 'form-control form-control-user' %>
                        <small class="text-primary"><%= resource.errors[:password].to_sentence %></small>
                      </div>
                      <div class="col-sm-6">
                        <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Password Confirmation', class: 'form-control form-control-user' %>
                        <small class="text-primary"><%= resource.errors[:password_confirmation].to_sentence %></small>
                      </div>
                    </div>
                    <%= f.submit "Register Account", class: 'btn btn-primary btn-user btn-block' %>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <%= link_to 'Forgot Password?', new_password_path(resource_name), class: 'small' %>
                  </div>
                  <div class="text-center">
                    <%= link_to 'Already have an account? Login!', new_session_path(resource_name), class: 'small' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
