<%= render partial: 'shared/messages' %>
<div class="container py-3 d-flex justify-content-center">
  <div class="authentication-form">
    <h2 class="text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group mt-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <small class="text-primary"><%= resource.errors[:email].to_sentence %></small>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <small class="text-primary"><%= resource.errors[:password].to_sentence %></small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        <small class="text-primary"><%= resource.errors[:password_confirmation].to_sentence %></small>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary text-light w-100 mt-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
