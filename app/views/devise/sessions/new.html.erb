<div class="bg-gradient-primary">
  <%= render partial: 'shared/messages' %>
  <div class="container">

    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                  </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-user' %>
                    </div>
                    <div class="form-group">
                      <%= f.password_field :password, autocomplete: "password", class: 'form-control form-control-user' %>
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <%= f.check_box :remember_me, class: 'custom-control-input' %>
                        <label class="custom-control-label" for="customCheck">Remember Me</label>
                      </div>
                    </div>
                    <%= f.submit "Login", class: 'btn btn-primary btn-user btn-block' %>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <%= link_to 'Forgot Password?', new_password_path(resource_name), class: 'small' %>
                  </div>
                  <div class="text-center">
                    <%= link_to 'Create an Account!', new_registration_path(resource_name), class: 'small' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
