<div class="bg-primary vh-100">
  <%= render partial: 'shared/messages' %>
  <div class="container h-100 py-3 d-flex justify-content-center align-items-center">
    <div class="authentication-form">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          <small class="text-primary"><%= resource.errors[:email].to_sentence %></small>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary text-light w-100 mt-3' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
