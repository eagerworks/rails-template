<div class="bg-gradient-primary">
  <%= render partial: 'shared/messages' %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                    <p class="mb-4">We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!</p>
                  </div>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Enter Email Address...', class: 'form-control' %>
                      <small class="text-primary"><%= resource.errors[:email].to_sentence %></small>
                    </div>
                    <%= f.submit "Reset Password", class: 'btn btn-primary btn-user btn-block' %>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <%= link_to 'Create an Account!', new_registration_path(resource_name), class: 'small' %>
                  </div>
                  <div class="text-center">
                    <%= link_to 'Already have an account? Login!', new_session_path(resource_name), class: 'small' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
